@page
@model Library.Pages.User.AddModel
@{
}


<br />
<h2 class="text-info">Add User</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="User.FirstName"></label>
            </div>
            <div class="col-6">
                <input asp-for="User.FirstName" class="form-control" />
            </div>
            <span asp-validation-for="User.FirstName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="User.LastName"></label>
            </div>
            <div class="col-6">
                <input asp-for="User.LastName" class="form-control" />
            </div>
            <span asp-validation-for="User.LastName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="User.BirthDate"></label>
            </div>
            <div class="col-6">
                <input asp-for="User.BirthDate" class="form-control" />
            </div>
            <span asp-validation-for="User.BirthDate" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="User.Email"></label>
            </div>
            <div class="col-6">
                <input asp-for="User.Email" class="form-control" />
            </div>
            <span asp-validation-for="User.Email" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="User.Phone"></label>
            </div>
            <div class="col-6">
                <input asp-for="User.Phone" class="form-control" />
            </div>
            <span asp-validation-for="User.Phone" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Update" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-dark form-control">Cancel</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}