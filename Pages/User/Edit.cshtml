@page
@model Library.Pages.User.EditModel
@{
}
<style>
    form > div > div > label {
        font-weight: 600;
    }

    form > div > span {
        font-weight: 600;
        margin-top: 5px;
    }
</style>

<h2 class="text-info">Edit</h2>
<br />
<div class="border container" style="padding:30px;">
    <form method="post">
        <input type="hidden" asp-for="NewUser.UserId" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="NewUser.FirstName"></label>
            </div>
            <div class="col-4">
                <input asp-for="NewUser.FirstName" class="form-control" />
            </div>
            <span asp-validation-for="NewUser.FirstName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="NewUser.LastName"></label>
            </div>
            <div class="col-4">
                <input asp-for="NewUser.LastName" class="form-control" />
            </div>
            <span asp-validation-for="NewUser.LastName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="NewUser.BirthDate"></label>
            </div>
            <div class="col-4">
                <input asp-for="NewUser.BirthDate" class="form-control" />
            </div>
            <span asp-validation-for="NewUser.BirthDate" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="NewUser.Email"></label>
            </div>
            <div class="col-4">
                <input asp-for="NewUser.Email" class="form-control" />
            </div>
            <span asp-validation-for="NewUser.Email" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="NewUser.Phone"></label>
            </div>
            <div class="col-4">
                <input asp-for="NewUser.Phone" class="form-control" />
            </div>
            <span asp-validation-for="NewUser.Phone" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2 offset-3">
                <input type="submit" value="Update" class="btn btn-primary form-control" />
            </div>
            <div class="col-2">
                <a asp-page="Index" class="btn btn-dark form-control">Cancel</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}